#:import parse_color kivy.parser.parse_color

<MarkdownTable>:
    size_hint_y: None
    cols: 1
    height: self.minimum_height
<MarkdownRow>:
    orientation: 'horizontal'
    padding: 4,2
    size_hint_y: None
    size_hint_x: 1
    height: self.minimum_height
    canvas:
        Color:
            rgba: app.colors['Dark']
        Line:
            width: 1.2
            rectangle: self.x, self.y, self.width, self.height

<MarkdownCellLabel>:
    highlight: self.is_codespan
    highlight_color: app.colors['Codespan']
    bg_color: app.colors['Dark']
    valign: 'top'
    size_hint_y: None
    markup: True
    mipmap: True
    width: self.texture_size[0]
    height: self.texture_size[1]
    text_size: self.width, None
    font_size: sp(14) if self.font_family == "RobotoMono" else sp(15)
    padding: sp(4), sp(2)
    canvas:
        Color:
            rgba: app.colors['Dark']
        Line:
            width: sp(1)
            points: [ self.x,   self.y,   self.right,   self.y,   self.right,   self.top,   self.x,   self.top,   self.x,   self.y ]
