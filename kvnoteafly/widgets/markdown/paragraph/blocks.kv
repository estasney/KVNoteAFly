#:import parse_color kivy.parser.parse_color
<MarkdownBlockQuote>:
    cols: 1
    size_hint_y: None
    height: content.texture_size[1] + sp(20)
    id: parent
    padding: sp(10), sp(10), 0, sp(10)
    canvas:
        Color:
            rgba: (*app.colors['Gray'], 0.5)
        Rectangle:
            pos: [self.pos[0], self.pos[1] + sp(5)]
            size: [self.size[0], self.size[1] -sp(10)]
        Color:
            rgb: parse_color("#729fcf")
        Rectangle:
            pos: [self.pos[0], self.pos[1] + sp(5)]
            size: [sp(4), self.height - sp(10)]
    Label:
        id: content
        markup: False
        valign: 'center'
        size: self.texture_size
        text_size: self.width, None
        font_size: sp(15)
        text: parent.text_content
