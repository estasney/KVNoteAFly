#:import parse_color kivy.parser.parse_color

<MarkdownHeading>:
    markup: True
    valign: 'top'
    font_size: sp(20 - self.level)

    size_hint_y: None
    height: self.texture_size[1] + dp(20)
    text_size: self.width, None
    bold: True

    canvas:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            pos: self.x, self.y + 5
            size: self.width, 1

<MarkdownBlock>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
