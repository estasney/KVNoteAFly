#:import Toolbar widgets.toolbar
#:import SmallLabel widgets.style
<CategoryScreenScrollWrapper>:
    chooser: chooser
    height: chooser.minimum_height
    NoteCategories:
        id: chooser
        categories: root.categories
        size_hint_x:1
        size_hint_y:None

<NoteCategories>:
    category_container: category_container
    orientation: 'vertical'
    Toolbar:
        padding: 10

    GridLayout:
        id: category_container
        cols: 4
        padding: 10
        spacing: 10

<NoteCategoryButton>:
    orientation: 'vertical'
    padding: 10
    image: image
    size_hint: 0.25, None
    canvas.before:
        RoundedRectangle:
            pos: self.pos
            size: self.size
            texture: self.tx_bg_normal if self.state == 'normal' else self.tx_bg_down
    Image:
        id: image
        source: root.source
        mipmap: True

    SmallLabel:
        text: root.text
        size_hint_x: 1
        size_hint_y: 0.4
