#:import NoteCategories widgets.categories
#:import CategoryScreenScrollWrapper widgets.categories
#:import ScrollingListView widgets.scroller
#:import Note widgets.note

<NoteAppScreenManager>:
    id: screen_manager
    NoteCategoryChooserScreen:
        id: chooser_screen
        name: 'chooser_screen'
    NoteListViewScreen:
        id: list_view_screen
        name: 'list_view_screen'

<NoteListViewScreen>:
    id: manager_screen
    meta_notes: app.note_category_meta
    ScrollingListView:
        id: scroller


<NoteCategoryChooserScreen>:
    id: manager_screen
    chooser: chooser
    categories: app.note_categories
    canvas.before:
        Color:
            rgba: app.colors['Dark']
        Rectangle:
            size: self.size
            pos: self.pos
    CategoryScreenScrollWrapper:
        manager: manager_screen
        categories: manager_screen.categories
        id: chooser

<NoteCategoryScreen>:
    current_note: current_note
    Note:
        id: current_note
