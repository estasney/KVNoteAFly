#:import PrimaryVSep widgets.separator

<PrimaryVSep@VSeparator>:
    color: app.colors['Primary']
    width: dp(2)

<ButtonBar>:
    orientation: "horizontal"
    play_button: play_button
    padding: 0, 0, 0, 0
    canvas:
        Color:
            rgb: app.colors['Primary']
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0]+4, self.size[1], 4)
            width: dp(1)
    ListViewButton:
        opacity: 1 if self.state == 'normal' else 0.6
        on_release: app.display_state = 'list'
        mipmap: True
    PrimaryVSep:
    BackButton:
        opacity: 1 if self.state == 'normal' else 0.6
        on_release: app.paginate(-1)
        mipmap: True
    PrimaryVSep:
    PlayStateButton:
        id: play_button
        opacity: 1 if self.state == 'normal' else 0.6
        on_release: self.playing = not self.playing
        mipmap: True
    PrimaryVSep:
    ForwardButton:
        opacity: 1 if self.state == 'normal' else 0.6
        on_release: app.paginate(1)
        mipmap: True
    PrimaryVSep:
    ReturnButton:
        opacity: 1 if self.state == 'normal' else 0.6
        mipmap: True
        on_release: app.note_category = ''
